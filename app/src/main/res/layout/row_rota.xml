<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="123dp">

            <TextView
                android:id="@+id/row_descricao_rota_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Descrição"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/row_descricao_rota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="8dp"
                android:text="Valor_Descrição"
                app:layout_constraintBottom_toBottomOf="@+id/row_descricao_rota_id"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/row_descricao_rota_id"
                app:layout_constraintTop_toTopOf="@+id/row_descricao_rota_id"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/row_data_fim_rota_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Data final da Rota"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/row_data_fim_inicio_id"
                app:layout_constraintTop_toBottomOf="@+id/row_data_fim_inicio_id" />

            <TextView
                android:id="@+id/row_data_fim_rota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="8dp"
                android:text="Valor_data_final"
                app:layout_constraintBottom_toBottomOf="@+id/row_data_fim_rota_id"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.04"
                app:layout_constraintStart_toEndOf="@+id/row_data_fim_rota_id"
                app:layout_constraintTop_toTopOf="@+id/row_data_fim_rota_id"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/row_data_fim_inicio_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Data inicio da rota"
                app:layout_constraintStart_toStartOf="@+id/row_descricao_rota_id"
                app:layout_constraintTop_toBottomOf="@+id/row_descricao_rota_id" />

            <TextView
                android:id="@+id/row_data_fim_inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginEnd="8dp"
                android:text="Valor_data_inicio"
                app:layout_constraintBottom_toBottomOf="@+id/row_data_fim_inicio_id"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.042"
                app:layout_constraintStart_toEndOf="@+id/row_data_fim_inicio_id"
                app:layout_constraintTop_toTopOf="@+id/row_data_fim_inicio_id"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>